<p id="notice"><%= notice %></p>

<h1>Count Wants</h1>

<table>
  <thead>
    <tr>
      <th>Idea</th>
      <th>Category id</th>
      <th>Title</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @count_wants.each do |count_want| %>
      <tr>
        <td><%= count_want.IDEA %></td>
        <td><%= count_want.CATEGORY_ID %></td>
        <td><%= count_want.TITLE %></td>
        <td><%= count_want.COUNT %></td>
        <td><%= link_to 'Show', count_want %></td>
        <td><%= link_to 'Edit', edit_count_want_path(count_want) %></td>
        <td><%= link_to 'Destroy', count_want, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Count Want', new_count_want_path %>
